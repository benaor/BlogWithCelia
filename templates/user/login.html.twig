{% extends 'base.html.twig' %}

{% block title %}login{% endblock %}

{% block body %}

<h1>Connectez-vous !</h1>

{% if error %}
<div class="alert alert-danger">L'adresse email ou le mot de passe que vous avez entr√© est incorrecte.</div>
{% endif %}

<form action="{{path('login')}}" method="POST" class="col-6 mx-auto">

    <div class="form-group my-3">
        <label for="email">Email</label>
        <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email ..." required
            value="{{last_username}}">
    </div>

    <div class="form-group my-3">
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" placeholder="Mot de passe ..." class="form-control"
            required>
    </div>

    <div class="form-group text-center my-3">
        <button type="submit" class="btn btn-lg btn-success w-100 my-2">Login</button>
    </div>
</form>

{% endblock %}